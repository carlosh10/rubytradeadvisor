<div class="plans banner_principal uk-width-1-1"  style="background-size: cover; background-repeat: no-repeat; min-height: 100%">
	<div class="uk-vertical-align uk-height-2-2">
        <div class="uk-vertical-align-middle uk-text-left" style="margin: 5%;">
        	<div class="uk-panel uk-panel-box">
				<% if @subscription %>
					<h4>Assinatura plano  <%= @subscription.plan.name  %></h4>
					<p>ID da assinatura : <%= @subscription.iugu_identifier %></p>
