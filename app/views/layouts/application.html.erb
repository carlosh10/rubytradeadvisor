<!DOCTYPE html>
<html>
<head>
  <title>Tradeadvisor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body>
 <header data-uk-sticky="{top:-600, animation: 'uk-animation-slide-top'}" class="topo_site dark_blue uk-width-1-1" style="margin: 0px;">
        <nav>
            <div class="uk-container uk-container-center">

                <a class="uk-navbar-brand logo_box uk-hidden-small" href="/">
                    <%= image_tag "logo.svg", class: "uk-margin-remove" %>
                </a>

                <div class="busca_topo uk-hidden uk-width-medium-6-10">
                    <form class="uk-form" action="/search" accept-charset="UTF-8" method="post">
                        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                        <div class="uk-grid uk-grid-collapse">
                            <div class="uk-width-5-6 uk-width-medium-9-10">
                                <input class="input_busca uk-width-1-1" type="text" style="border-radius: 3px 0px 0px 3px !important;" placeholder="Pesquisa" name="search[query]">
                            </div>
                            <div class="uk-width-1-6 uk-width-medium-1-10">
                                <button class="button_busca uk-width-1-1"><i class="uk-icon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="uk-navbar-nav menu_top">
                    <ul class="menu_links">
                        <li style="text-align: center;">
                        <% if user_signed_in? %>
                          <!--<div style="color:white;font-family:'latolight';padding: 5px 15px;margin:10px 0px;">Logado como <%= current_user.email %></div>-->
                          <!--<a class="uk-button" disabled>Olá <%= current_user.email %>!</a>-->
                          <a style="float: left; visibility: hidden" class="uk-button">&nbsp;</a>
                          <span class="signed-in">
                          Olá <%= current_user.email %>!</span></br>
                          <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "logout")  %> 
                          </span>
                        <% else %>
                             <a class="uk-button" href="/users/sign_in"> <i class="uk-icon-user btn_icon"></i> Entrar</a>
                        <% end %>
                        </li>
                    </ul>

                </div>

            </div>

        </nav>
    </header>

<div style="display:none;">
  <% if notice %>
    <p class="notify alert alert-success"><%= notice %></p>
  <% end %>
</div>

  <%= yield %>


<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-65409010-1', 'auto');
  ga('send', 'pageview');

</script>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
