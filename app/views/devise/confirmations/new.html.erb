<div class="banner_principal uk-width-1-1"  style="background-size: cover; height: 100%; background-repeat: no-repeat;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;">
  <div class="uk-vertical-align uk-text-center uk-height-2-2">
    <div class="uk-vertical-align-middle" style="width: 250px; margin: 10%;">



<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post , :class => 'uk-panel uk-panel-box uk-form'}) do |f| %>
  <%= devise_error_messages! %>
	
	<h2>Re-enviar instruções de confirmação</h2>
    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), :placeholder => "E-mail", :class => "uk-width-1-1 uk-form-larg" %> 

    <%= f.submit "Envie novamente!", :class => "uk-width-1-1 btn btn-primary btn-lg" , :style => "color:white;" %>

  </div>
<% end %>


</div>
  </div>
</div>
