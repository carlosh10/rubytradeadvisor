<div class="banner_principal uk-width-1-1"  style="background-size: cover; height: 100%; background-repeat: no-repeat;">

<div class="uk-vertical-align uk-text-center uk-height-2-2">
            <div class="uk-vertical-align-middle" style="width: 250px; margin: 10%;">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'uk-panel uk-panel-box uk-form'}) do |f| %>

  <p class="text-danger"><%= devise_error_messages! %></p>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "E-mail", :class => "uk-width-1-1 uk-form-larg" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Senha", :class => "uk-width-1-1 uk-form-larg" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confime a senha", :class => "uk-width-1-1 uk-form-larg" %>
  </div>

  <div class="actions">
    <%= f.submit "Registre-se!",:class => "uk-width-1-1 btn btn-primary btn-lg" , :style => "color:white;" %><br /><br />
    <%= render "devise/shared/links" %>
    <%= link_to raw("<i class='fa fa-facebook'></i> Entrar com Facebook"), user_omniauth_authorize_path(:facebook), :class => "uk-width-1-1 btn btn-primary btn-lg",:style => "margin-top: 10px;" %>
        <%= link_to raw("<i class='fa fa-linkedin'></i> Entrar com Linkedin"), user_omniauth_authorize_path(:linkedin), :class => "uk-width-1-1 btn btn-primary btn-lg",:style => "margin-top: 10px;" %>
  </div>
<% end %>


  </div>
</div>
  </div>