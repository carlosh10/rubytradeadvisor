<div class="banner_principal uk-width-1-1"  style="background-size: cover; height: 100%; background-repeat: no-repeat;">
  <div class="uk-vertical-align uk-text-center uk-height-2-2">
    <div class="uk-vertical-align-middle" style="width: 350px; margin: 10%;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html =>
      {:class => 'uk-panel uk-panel-box uk-form'} ) do |f| %>
      <% if alert %>
      <p class="text-danger">
        <%= alert %></p>
      <% end %>
      <div class="uk-form-row">
        <%= f.email_field :email, autofocus: true, :class =>"uk-width-1-1 uk-form-larg", :placeholder => "E-mail" %></div>
      <div class="uk-form-password uk-form-row" style="width: 100%;">
        <!--<input class="uk-width-1-1 uk-form-large" type="text" placeholder="Senha">
        -->
        <%= f.password_field :password, autocomplete: "off", :class =>
        "uk-width-1-1 uk-form-larg", :placeholder => "Senha" %>
        <a href="" class="uk-form-password-toggle" data-uk-form-password>Show</a>
      </div>
      <div class="uk-form-row">

        <%= f.submit "Log in", :class =>
        "uk-width-1-1 btn btn-primary btn-lg" , :style => "color:white;" %>
      </div>
      <div class="uk-form-row uk-text-small">
        <label class="uk-float-left">
          <%= f.check_box :remember_me %>Lembrar-me?</label>
        <%= link_to "Cadastre-se", new_user_registration_path, :class =>
        'uk-link uk-link-muted'  %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name),  :class =>
        'uk-float-right uk-link uk-link-muted' %>
        <br />
      </div>
      <div class="uk-form-row uk-text-small">
        <%= link_to raw("<i class='fa fa-facebook'></i> Entrar com Facebook"), user_omniauth_authorize_path(:facebook), :class => "uk-width-1-1 btn btn-primary btn-lg"  %>
        <%= link_to raw("<i class='fa fa-linkedin'></i> Entrar com Linkedin"), user_omniauth_authorize_path(:linkedin), :class => "uk-width-1-1 btn btn-primary btn-lg" , :style => "margin-top: 10px;"%>
      </div>

      <% end %></div>
  </div>
</div>