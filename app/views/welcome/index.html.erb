<% cache do %>
<section id="topo">
    <div class="banner_principal uk-width-1-1" data-uk-parallax="{bg: '-200'}">
        <div class="uk-container uk-container-center">

            <div class="mensagem_banner uk-width-medium-3-5 uk-container-center">
                <a class="uk-display-block uk-width-4-5 uk-container-center uk-visible-small" href="/">
                    <%= image_tag "logo.svg", class: "uk-margin-remove" %>
                </a>

                <h2 class="titulo_banner">
                    Vá além da superfície, descubra tudo sobre comércio exterior:
                </h2>

                <form class="uk-form" action="/search" accept-charset="UTF-8" method="post">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <div class="uk-grid uk-grid-collapse">
                        <div class="uk-width-5-6 uk-width-medium-9-10">
                            <input class="input_busca uk-width-1-1" style="border-radius: 3px 0px 0px 3px !important;" type="text" placeholder="Pesquisa" name="search[query]" />
                        </div>
                        <div class="uk-width-1-6 uk-width-medium-1-10">
                            <button id="search-button" class="button_busca uk-width-1-1"><i class="uk-icon-search"></i></button>
                        </div>
                    </div>
                </form>

                <a href="#exemplos" data-uk-smooth-scroll="{offset:60}" class="descer">
                    <span>Exemplos</span>
                    <i class="uk-icon-angle-double-down uk-icon-medium"></i>
                </a>
            </div>
        </div>
    </div>

</section>
